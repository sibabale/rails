# Accounts Service Environment Variables
# Copy this to .env and update with your values

# Database connection (required)
DATABASE_URL=postgresql://user:password@host:5432/database?sslmode=require

# Server configuration
PORT=8081
GRPC_PORT=50052
HOST=0.0.0.0

# Ledger gRPC (Rails ledger service)
LEDGER_GRPC_URL=http://127.0.0.1:50053
# Ledger gRPC deadline (seconds). Increase if ledger posting is slow.
LEDGER_GRPC_TIMEOUT_SECS=10

# Logging
RUST_LOG=info

# Sentry error tracking (optional)
# Get your DSN from https://sentry.io/settings/projects/
SENTRY_DSN=
ENVIRONMENT=development

# Trusted proxy IPs for rate limit source extraction (comma-separated)
ACCOUNTS_TRUSTED_PROXY_IPS=127.0.0.1
