# Rails Accounts Service - Railway Environment Variables
# Copy these to your Railway service environment variables

# ===========================================
# DATABASE (Neon PostgreSQL)
# ===========================================
DATABASE_URL=postgresql://neondb_owner:YOUR_PASSWORD@YOUR_NEON_HOST/neondb?sslmode=require

# ===========================================
# SERVER CONFIGURATION
# ===========================================
PORT=8081
GRPC_PORT=9090
HOST=0.0.0.0

# ===========================================
# NATS CONFIGURATION
# Use Railway reference variable for internal networking
# ===========================================
NATS_URL=nats://${{nats.RAILWAY_PRIVATE_DOMAIN}}:4222
NATS_STREAM=rails_events

# ===========================================
# LOGGING
# ===========================================
RUST_LOG=info

# ===========================================
# RAILWAY REFERENCE VARIABLES (for documentation)
# ===========================================
# RAILWAY_PRIVATE_DOMAIN - Auto-assigned internal hostname
# RAILWAY_PUBLIC_DOMAIN - Public domain (if generated)
# RAILWAY_ENVIRONMENT - Current environment name
