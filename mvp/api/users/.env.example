# Users Service Environment Variables
# Copy this to .env and update with your values

# Database connection (required)
DATABASE_URL=postgresql://user:password@host:5432/database?sslmode=require

# Server configuration
SERVER_ADDR=0.0.0.0:8080
GRPC_PORT=50051

# gRPC configuration
ACCOUNTS_GRPC_URL=http://localhost:50052

# JWT Secret (REQUIRED - must match ledger service JWT_SECRET)
# This is used to sign JWT tokens. Ledger service uses this to decode tokens.
# If this doesn't match ledger service, ledger REST endpoints will return 401 Unauthorized
JWT_SECRET=your_jwt_secret_here

# Logging
RUST_LOG=info

# Sentry error tracking (optional)
# Get your DSN from https://sentry.io/settings/projects/
SENTRY_DSN=
ENVIRONMENT=development

# Resend email configuration (optional but required for password reset + beta)
RESEND_API_KEY=your_resend_api_key_here
RESEND_FROM_EMAIL=noreply@rails.co.za
RESEND_FROM_NAME=Rails Financial Infrastructure
# Override for testing/mocking Resend
RESEND_BASE_URL=https://api.resend.com
# Reply-to address for beta application confirmations
RESEND_BETA_NOTIFICATION_EMAIL=beta@rails.co.za

# Frontend base URL for email links
FRONTEND_BASE_URL=http://localhost:5173

