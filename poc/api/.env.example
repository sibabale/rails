# Rails API Configuration
# Copy this file to .env and update the values for your environment

# Server Configuration
NODE_ENV=development
PORT=8000
NODE_ID=node-001

# External Services
SIM_WEBHOOK_ENDPOINT=http://localhost:8000/api/webhook

# Analytics & Monitoring
POSTHOG_API_KEY=your_posthog_api_key_here

# Logging
LOG_LEVEL=info

# Security (CHANGE THESE IN PRODUCTION!)
ADMIN_TOKEN=change-this-admin-token-in-production-min-32-chars
JWT_SECRET=change-this-jwt-secret-in-production-min-32-chars

# Financial Limits
MAX_TRANSACTION_AMOUNT=1000000
DAILY_TRANSACTION_LIMIT=10000000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Queue Configuration
QUEUE_PROCESSING_INTERVAL=1000
QUEUE_MAX_RETRIES=3
QUEUE_RETRY_DELAY=5000

# File Storage
LEDGER_FILE_MAX_SIZE=104857600
BACKUP_RETENTION_DAYS=90

# Development/Debug
ENABLE_REQUEST_LOGGING=true
ENABLE_DETAILED_ERRORS=true